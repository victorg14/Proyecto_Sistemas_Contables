<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="AnchorMostrar" minHeight="600.0" minWidth="800.0" prefHeight="649.0" prefWidth="1044.0" style="-fx-background-color: #00401b;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.proyectosistemascontables.LibrodiarioController">
    <children>
        <!-- Contenedor principal con márgenes proporcionales -->
        <VBox spacing="20.0" style="-fx-background-color: #FEFAE0; -fx-background-radius: 22; -fx-border-radius: 22; -fx-border-color: #D99201; -fx-border-width: 2;" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>

            <!-- Título -->
            <Label alignment="CENTER" maxWidth="Infinity" text="LIBRO DIARIO" textFill="#00401b">
                <font>
                    <Font name="System Bold" size="41.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>

            <!-- Panel de filtros -->
            <VBox spacing="15.0" style="-fx-background-color: #F5F5DC; -fx-background-radius: 10; -fx-border-color: #D99201; -fx-border-width: 1; -fx-border-radius: 10;">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>

                <!-- Fila de fechas -->
                <HBox alignment="CENTER" spacing="20.0">
                    <!-- Fecha inicio -->
                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                        <Label text="Fecha de inicio:" textFill="#00401b">
                            <font>
                                <Font name="System Bold" size="15.0" />
                            </font>
                        </Label>
                        <DatePicker fx:id="txtFechaInicio" maxWidth="Infinity" minWidth="150.0" prefWidth="200.0" />
                    </VBox>

                    <!-- Fecha final -->
                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                        <Label text="Fecha final:" textFill="#00401b">
                            <font>
                                <Font name="System Bold" size="15.0" />
                            </font>
                        </Label>
                        <DatePicker fx:id="txtFechaFinal" maxWidth="Infinity" minWidth="150.0" prefWidth="200.0" />
                    </VBox>
                </HBox>

                <!-- Fila de botones de acción -->
                <HBox alignment="CENTER" spacing="15.0">
                    <Button fx:id="btnBuscar" maxWidth="400.0" minWidth="150.0" mnemonicParsing="false" prefHeight="43.0" prefWidth="200.0" style="-fx-background-color: #D99201; -fx-text-fill: #FEFAE0; -fx-border-color: #00401b; -fx-border-radius: 5; -fx-background-radius: 5; -fx-border-width: 2;" text="Generar Libro Diario" HBox.hgrow="ALWAYS">
                        <font>
                            <Font name="System Bold" size="15.0" />
                        </font>
                    </Button>
                    <Button fx:id="btnReiniciarFiltro" maxWidth="400.0" minWidth="120.0" mnemonicParsing="false" prefHeight="43.0" prefWidth="150.0" style="-fx-background-color: #00401b; -fx-text-fill: #FEFAE0; -fx-border-color: #D99201; -fx-border-radius: 5; -fx-background-radius: 5; -fx-border-width: 2;" text="Reiniciar filtro" HBox.hgrow="ALWAYS">
                        <font>
                            <Font name="System Bold" size="15.0" />
                        </font>
                    </Button>
                </HBox>
            </VBox>

            <!-- Tabla del Libro Diario -->
            <TableView fx:id="tbLibroDiario" minHeight="300.0" prefHeight="320.0" stylesheets="@../style/style.css" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="clFecha" minWidth="100.0" prefWidth="127.0" text="Fecha" />
                    <TableColumn fx:id="clCuenta" minWidth="150.0" prefWidth="235.0" text="Cuenta" />
                    <TableColumn fx:id="clDebe" minWidth="90.0" prefWidth="110.0" text="Debe ($)" />
                    <TableColumn fx:id="clHaber" minWidth="90.0" prefWidth="104.0" text="Haber ($)" />
                    <TableColumn fx:id="btnDocumento" minWidth="90.0" prefWidth="91.0" text="Documento" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <!-- Botones inferiores -->
            <HBox alignment="CENTER" spacing="20.0">
                <Button fx:id="btnLibroMayor" maxWidth="400.0" minWidth="150.0" mnemonicParsing="false" prefHeight="43.0" prefWidth="200.0" style="-fx-background-color: #00401B; -fx-text-fill: #FEFAE0; -fx-border-color: #D99201; -fx-border-width: 2; -fx-border-radius: 5; -fx-background-radius: 5;" text="Pasar a libro mayor" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
                <Button fx:id="btnExportar" maxWidth="400.0" minWidth="120.0" mnemonicParsing="false" prefHeight="43.0" prefWidth="200.0" style="-fx-background-color: #00401b; -fx-text-fill: #FEFAE0; -fx-border-color: #D99201; -fx-border-radius: 5; -fx-background-radius: 5; -fx-border-width: 2;" text="Exportar" HBox.hgrow="ALWAYS">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Button>
            </HBox>
        </VBox>
    </children>
</AnchorPane>