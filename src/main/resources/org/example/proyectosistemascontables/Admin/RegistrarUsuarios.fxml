<?import javafx.scene.text.Font?>

<AnchorPane minHeight="650.0" minWidth="900.0" prefHeight="700.0" prefWidth="1080.0" style="-fx-background-color: #00401B;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.proyectosistemascontables.RegistrarUsuarioController">
