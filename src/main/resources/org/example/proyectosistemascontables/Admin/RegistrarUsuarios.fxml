                        <Label alignment="CENTER" text="REGISTRO DE USUARIOS" textFill="#00401b" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="41.0">
                            <font>
                                <Font name="System Bold" size="36.0" />
                            </font>
                        </Label>

                        <!-- Formulario con GridPane -->
                        <GridPane hgap="40.0" vgap="25.0" AnchorPane.leftAnchor="60.0" AnchorPane.rightAnchor="60.0" AnchorPane.topAnchor="130.0">
