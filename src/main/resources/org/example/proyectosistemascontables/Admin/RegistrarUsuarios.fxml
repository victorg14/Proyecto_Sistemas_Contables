                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="90.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="90.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="90.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="80.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <!-- Columna 1: Nombre -->
                                <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                    <children>
                                        <Label style="-fx-text-fill: #00401b;" text="Ingrese el nombre del usuario" textFill="#fefae0">
                                            <font>
                                                <Font name="Tahoma Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txtNombre" maxWidth="Infinity" prefHeight="47.0" promptText="Nombre" stylesheets="@../style/style.css">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </TextField>
                                    </children>
                                </VBox>

                                <!-- Columna 2: Usuario -->
                                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <children>
                                        <Label style="-fx-text-fill: #00401b;" text="Ingrese el usuario" textFill="#fefae0">
                                            <font>
                                                <Font name="Tahoma Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txtUsuario" maxWidth="Infinity" prefHeight="47.0" promptText="Usuario" stylesheets="@../style/style.css">
                                            <font>
                                                <Font name="System Bold" size="15.0" />
                                            </font>
                                        </TextField>
                                    </children>
                                </VBox>

                                <!-- Columna 1: Apellido -->
                                <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                    <children>
                                        <Label style="-fx-text-fill: #00401b;" text="Ingrese el apellido del usuario" textFill="#fefae0">
                                            <font>
                                                <Font name="Tahoma Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txtApellido" maxWidth="Infinity" prefHeight="47.0" promptText="Apellido" stylesheets="@../style/style.css">
                                            <font>
                                                <Font name="System Bold" size="15.0" />
                                            </font>
                                        </TextField>
                                    </children>
                                </VBox>

                                <!-- Columna 2: Password -->
                                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <children>
                                        <Label style="-fx-text-fill: #00401b;" text="Ingrese la contraseña del usuario" textFill="#fefae0">
                                            <font>
                                                <Font name="Tahoma Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txtPassword" maxWidth="Infinity" prefHeight="47.0" promptText="Password" stylesheets="@../style/style.css">
                                            <font>
                                                <Font name="System Bold" size="15.0" />
                                            </font>
                                        </TextField>
                                    </children>
                                </VBox>

                                <!-- Columna 1: Email -->
                                <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                    <children>
                                        <Label style="-fx-text-fill: #00401b;" text="Ingrese el correo del usuario" textFill="#fefae0">
                                            <font>
                                                <Font name="Tahoma Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <TextField fx:id="txtEmail" maxWidth="Infinity" prefHeight="47.0" promptText="Email" stylesheets="@../style/style.css">
                                            <font>
                                                <Font name="System Bold" size="15.0" />
                                            </font>
                                        </TextField>
                                    </children>
                                </VBox>

                                <!-- Columna 2: Rol -->
                                <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                    <children>
                                        <Label style="-fx-text-fill: #00401b;" text="Ingrese el rol del nuevo usuario" textFill="#fefae0">
                                            <font>
                                                <Font name="Tahoma Bold" size="14.0" />
                                            </font>
                                        </Label>
                                        <ComboBox fx:id="txtRol" maxWidth="Infinity" prefHeight="47.0" promptText="Rol" style="-fx-border-radius: 5; -fx-background-radius: 5;" stylesheets="@../style/style.css" />
                                    </children>
                                </VBox>

                                <!-- Botón Registrar - ocupa ambas columnas -->
                                <VBox alignment="CENTER" spacing="10.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3">
                                    <children>
                                        <Button fx:id="btnRegistrar" maxWidth="500.0" minWidth="350.0" mnemonicParsing="false" prefHeight="53.0" prefWidth="358.0" style="-fx-background-color: #00401b; -fx-border-color: #D99201; -fx-background-radius: 11; -fx-border-radius: 11; -fx-border-width: 2;" text="Registrar" textFill="#fefae0">
                                            <font>
                                                <Font name="System Bold" size="24.0" />
                                            </font>
                                        </Button>
                                    </children>
                                    <padding>
                                        <Insets top="20.0" />
                                    </padding>
                                </VBox>
                            </children>
                        </GridPane>
                    </children>
                </AnchorPane>
            </children>
        </StackPane>
    </children>
